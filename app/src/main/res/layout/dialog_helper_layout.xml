<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp20"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">

        <RelativeLayout
            android:id="@+id/headerLayout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp40"
            android:background="@color/black">

            <TextView
                android:id="@+id/titleDialogTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp40"
                android:layout_toLeftOf="@id/closeDialogButton"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="title"
                android:textColor="@color/white"
                android:textSize="@dimen/dp20" />

            <ImageView
                android:id="@+id/closeDialogButton"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_close_foreground" />
        </RelativeLayout>

        <View
            android:id="@+id/lineView"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/headerLayout"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lineView"
            android:background="@color/main_color"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iconDialogImageView"
                android:layout_width="@dimen/dp200"
                android:layout_height="@dimen/dp200"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp20" />

            <TextView
                android:id="@+id/contentDialogTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/dp50"
                android:layout_marginBottom="@dimen/dp20"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="If you enjoy using VPN CHANGER - VPN UNLIMITED FREE, would you mind taking a moment to rate it?"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/actionDialogButton"
                android:layout_width="@dimen/dp300"
                android:layout_height="@dimen/dp50"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp20"
                android:background="@drawable/bg_button_green"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="Action"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/dp20" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>